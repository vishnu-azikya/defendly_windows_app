{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Metro",
      "type": "shell",
      "command": "npm",
      "args": ["start"],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": ".*Metro.*ready.*|.*Dev server ready.*"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Run Windows App",
      "type": "shell",
      "command": "npm",
      "args": ["run", "windows"],
      "problemMatcher": "$msCompile",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "dependsOn": "Start Metro",
      "dependsOrder": "sequence"
    },
    {
      "label": "Start Metro and Run App",
      "dependsOn": [
        "Start Metro",
        "Run Windows App"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": []
    }
  ]
}

